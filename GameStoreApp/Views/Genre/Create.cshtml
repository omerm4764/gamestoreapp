@model GenreCreateOrUpdateVM
@{
    ViewBag.Title = "Create a genre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "Genre", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Title, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Description, new { placeholder = "Description", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" name="save" value="Save" class="btn btn-success btn-lg" />
                </div>
            </div>
        }
    </div>
</div>
