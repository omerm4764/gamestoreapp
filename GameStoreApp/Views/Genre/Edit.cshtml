@model GenreCreateOrUpdateVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "Genre", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Title, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Description, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" name="save" value="Save" />
                </div>
            </div>
        }
    </div>
</div>
